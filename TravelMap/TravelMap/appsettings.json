{
  //配置数据库连接字符串
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;user=root;password=123456;database=travelmap"
  },
  //配置JWT的生成和验证参数
  "Jwt": {
    "Key": "YourSuperSecretKey123456",
    "Issuer": "TravelMap", //Token 的颁发者(服务端应用名称）
    "Audience": "TravelMapUsers", //Token 的目标受众（客户端应用名称）
    "ExpiresInMinutes": 60 //Token 的有效期：60分钟
  },
  //配置日志记录的级别
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  //指定允许访问应用的主机
  "AllowedHosts": "*"
}



